<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title> Lillian's Hot Chicken </title>
  </head>

  <body>
    <h1> Lillian's Hot Chicken </h1>

    <h2> Add a new chicken recipe </h2>

    <form method="post" action="/chicken">
      <div>
        <label for="spice_level"> Spice Level </label>
        <input type="text" name="spice_level" id="spice_level">
      </div>

      <div>
        <label for="meat_type"> Meat Type </label>
        <input type="text" name="meat_type" id="meat_type">
      </div>

      <div>
        <label for="bone_status"> Boneless? </label>
        <input type="text" name="bone_status" id="bone_status">
      </div>

      <button>
        Submit
      </button>
    </form>
  </body>
</html>
